{
  "name": "handy-img",
  "version": "0.6.0",
  "description": "handy img tool and API",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "bin": {
    "handy-img": "./dist/bin.js",
    "himg": "./dist/bin.js"
  },
  "files": [
    "dist",
    "CHANGELOG.md"
  ],
  "scripts": {
    "prepare": "husky install",
    "dev": "tsup --watch",
    "build": "NODE_ENV=production tsup",
    "prepublishOnly": "pnpm build",
    "test": "mocha",
    "test-cover": "nyc --reporter=lcov --reporter=text mocha",
    "test-cover-ci": "nyc npm test && nyc report --reporter=text-lcov > coverage.lcov",
    "report-cover": "codecov"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/magicdawn/handy-img.git"
  },
  "keywords": [
    "handy-img",
    "img",
    "sharp",
    "resize",
    "compress",
    "mozjpeg"
  ],
  "author": "magicdawn",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/magicdawn/handy-img/issues"
  },
  "homepage": "https://github.com/magicdawn/handy-img#readme",
  "dependencies": {
    "@magicdawn/finder-sort": "^0.3.4",
    "@magicdawn/x-args": "^0.2.0",
    "@types/sharp": "0.31.1",
    "bytes": "^3.1.2",
    "chalk": "5",
    "clipanion": "3.2.1",
    "esm-utils": "^4.1.2",
    "fast-glob": "^3.3.1",
    "figures": "^5.0.0",
    "fs-extra": "11.1.1",
    "humanize-duration": "^3.29.0",
    "log-symbols": "^5.1.0",
    "mac-helper": "^0.1.1",
    "node-mozjpeg": "^1.0.1",
    "os-locale": "6",
    "promise.map": "^0.5.0",
    "sharp": "0.32.4",
    "typanion": "^3.13.0"
  },
  "devDependencies": {
    "@magicdawn/eslint-config": "^0.1.0",
    "@magicdawn/prettier-config": "^0.0.2",
    "@swc/core": "^1.3.71",
    "@swc/helpers": "^0.5.1",
    "@types/bytes": "^3.1.1",
    "@types/eslint": "^8.44.1",
    "@types/fs-extra": "^11.0.1",
    "@types/humanize-duration": "^3.27.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.4.5",
    "@types/prettier": "^2.7.3",
    "eslint": "8.45.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.1",
    "tsup": "^7.1.0",
    "type-fest": "^4.0.0",
    "typescript": "^5.1.6",
    "vitest": "^0.33.0"
  },
  "lint-staged": {
    "*.{ts,tsx,json,yml,md}": [
      "prettier --write"
    ]
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  }
}
