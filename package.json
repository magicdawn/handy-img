{
  "name": "handy-img",
  "version": "0.7.0",
  "description": "handy img tool and API",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "handy-img": "./dist/bin.js",
    "himg": "./dist/bin.js"
  },
  "files": [
    "dist",
    "CHANGELOG.md"
  ],
  "scripts": {
    "prepare": "husky install",
    "dev": "tsup --watch",
    "build": "NODE_ENV=production tsup",
    "prepublishOnly": "pnpm build",
    "test": "vitest run",
    "test-cover": "vitest run --coverage",
    "report-cover": "codecov"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/magicdawn/handy-img.git"
  },
  "keywords": [
    "handy-img",
    "img",
    "sharp",
    "resize",
    "compress",
    "mozjpeg"
  ],
  "author": "magicdawn",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/magicdawn/handy-img/issues"
  },
  "homepage": "https://github.com/magicdawn/handy-img#readme",
  "dependencies": {
    "@magicdawn/finder-sort": "^0.3.4",
    "@magicdawn/x-args": "^1.0.0",
    "bytes": "^3.1.2",
    "chalk": "5",
    "clipanion": "3.2.1",
    "esm-utils": "^4.2.1",
    "fast-glob": "^3.3.2",
    "figures": "^6.0.1",
    "fs-extra": "11.2.0",
    "humanize-duration": "^3.31.0",
    "log-symbols": "^6.0.0",
    "mac-helper": "^0.1.2",
    "node-mozjpeg": "^1.0.1",
    "os-locale": "6",
    "promise.map": "^0.5.0",
    "sharp": "0.33.1",
    "typanion": "^3.14.0"
  },
  "devDependencies": {
    "@magicdawn/eslint-config": "^0.1.0",
    "@magicdawn/prettier-config": "^0.0.3",
    "@swc/core": "^1.3.101",
    "@swc/helpers": "^0.5.3",
    "@types/bytes": "^3.1.4",
    "@types/eslint": "^8.56.0",
    "@types/fs-extra": "^11.0.4",
    "@types/humanize-duration": "^3.27.3",
    "@types/node": "^20.10.5",
    "@vitest/coverage-v8": "^1.1.0",
    "eslint": "8.56.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.1",
    "type-fest": "^4.8.3",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "lint-staged": {
    "*.{ts,tsx,json,yml,md}": [
      "prettier --write"
    ]
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  }
}
