  "description": "handy img tool and API",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "bin": {
    "handy-img": "./bin/handy-img.js",
    "himg": "./bin/handy-img.js"
  },
  "files": [
    "bin/*.js",
    "lib",
    "CHANGELOG.md"
  ],
  "scripts": {
