  "license": "MIT",
  "bugs": {
    "url": "https://github.com/magicdawn/handy-img/issues"
  },
  "homepage": "https://github.com/magicdawn/handy-img#readme",
  "dependencies": {
    "@magicdawn/finder-sort": "^0.3.4",
    "@magicdawn/x-args": "^0.2.0",
    "@types/sharp": "0.31.1",
    "bytes": "^3.1.2",
    "chalk": "4",
    "clipanion": "3.2.0",
    "fs-extra": "11.1.0",
    "globby": "11",
    "humanize-duration": "^3.28.0",
    "log-symbols": "^4.1.0",
    "mac-helper": "^0.0.2",
    "node-mozjpeg": "^1.0.1",
    "promise.map": "^0.5.0",
    "sharp": "0.31.3",
    "typanion": "^3.12.1"
  },
  "devDependencies": {
    "@magicdawn/eslint-config": "^0.1.0",
    "@magicdawn/prettier-config": "^0.0.2",
    "@swc/core": "^1.3.40",
    "@swc/helpers": "^0.4.14",
    "@types/bytes": "^3.1.1",
    "@types/eslint": "^8.21.1",
    "@types/fs-extra": "^11.0.1",
    "@types/humanize-duration": "^3.27.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.15.1",
    "@types/prettier": "^2.7.2",
    "codecov": "^3.8.2",
    "eslint": "8.36.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "mocha": "10.2.0",
    "nyc": "^15.1.0",
    "prettier": "^2.8.4",
    "should": "^13.2.3",
    "ts-node": "^10.9.1",
    "type-fest": "^3.6.1",
    "typescript": "^4.9.5"
  },
  "lint-staged": {
    "*.{ts,tsx,json,yml,md}": [
      "prettier --write"
    ]
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
