{
  "include": ["src/**/*"],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "target": "ES2022",
    "module": "Node16",
    "esModuleInterop": true,
    "declaration": true,
    "strictNullChecks": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "transpileOnly": true,
    "swc": true,
    "esm": true
  }
}
